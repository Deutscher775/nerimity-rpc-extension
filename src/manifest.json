{
  "manifest_version": 3,
  "permissions": ["tabs"],
  "name": "Nerimity RPC",
  "version": "0.1.1",
  "description": "Share your Spotify or YouTube progress with people on Nerimity!",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": ["https://open.spotify.com/*", "https://*.youtube.com/*"],
      "resources": [
        "WebSocketRPC.js",
        "utils.js",
        "spotify.js"
      ]
    },
    {
      "matches": ["https://open.spotify.com/*", "https://*.youtube.com/*"],
      "resources": [
        "WebSocketRPC.js",
        "utils.js",
        "youtube.js",
        "youtube_inject.js"
      ]
    }
  ],

  "content_scripts": [
    {
      "js": ["content.js"],
      "run_at": "document_start",
      "matches": ["https://open.spotify.com/*", "https://*.youtube.com/*"]
    }
  ]
}
